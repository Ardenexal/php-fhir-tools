{% extends 'base.html.twig' %}

{% block title %}FHIRPath Playground{% endblock %}

{% block body %}
<div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">FHIRPath Playground</h1>
    <p class="mt-1 text-gray-500 text-sm">Evaluate FHIRPath 2.0 expressions against JSON context data, or validate expression syntax.</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    {# Turbo Frame wraps form + result. On POST, Turbo swaps just this column. #}
    <turbo-frame id="fhirpath-playground" class="lg:col-span-2 space-y-4">

        <form action="{{ path('app_fhirpath_evaluate') }}" method="POST"
              class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 space-y-4">
            <div>
                <label for="expression" class="block text-sm font-medium text-gray-700 mb-1">
                    FHIRPath Expression <span class="text-red-500">*</span>
                </label>
                <input type="text"
                       id="expression"
                       name="expression"
                       value="{{ expression|e('html_attr') }}"
                       placeholder="e.g. Patient.name.given"
                       required
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm font-mono focus:outline-none focus:ring-2 focus:ring-indigo-500">
            </div>

            <div>
                <label for="context" class="block text-sm font-medium text-gray-700 mb-1">
                    JSON Context <span class="text-gray-400 font-normal">(optional for pure math/logic expressions)</span>
                </label>
                <textarea id="context"
                          name="context"
                          rows="10"
                          placeholder='{&#10;  "resourceType": "Patient",&#10;  "name": [{"family": "Smith", "given": ["John"]}]&#10;}'
                          class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm font-mono focus:outline-none focus:ring-2 focus:ring-indigo-500">{{ context }}</textarea>
            </div>

            <div class="flex gap-3">
                <button type="submit"
                        name="submit_action"
                        value="evaluate"
                        class="bg-indigo-600 text-white px-5 py-2 rounded-lg text-sm font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    Evaluate
                </button>
                <button type="submit"
                        name="submit_action"
                        value="validate"
                        class="bg-white text-indigo-600 border border-indigo-300 px-5 py-2 rounded-lg text-sm font-medium hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    Validate syntax
                </button>
            </div>
        </form>

        {# ---- Result ---- #}
        {% if error is not null %}
        <div class="bg-red-50 border border-red-200 rounded-xl p-4">
            <h3 class="text-sm font-semibold text-red-700 mb-1">Error</h3>
            <p class="text-sm text-red-600 font-mono">{{ error }}</p>
        </div>
        {% elseif result is not null %}
            {% if action == 'validate' %}
                {% if result.valid %}
                <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                    <p class="text-sm font-semibold text-green-700">✓ Expression is syntactically valid.</p>
                </div>
                {% else %}
                <div class="bg-red-50 border border-red-200 rounded-xl p-4">
                    <p class="text-sm font-semibold text-red-700">✗ Expression has syntax errors.</p>
                </div>
                {% endif %}
            {% else %}
                <div class="bg-white border border-gray-200 rounded-xl p-4">
                    <div class="flex items-center justify-between mb-3">
                        <h3 class="text-sm font-semibold text-gray-700">Result</h3>
                        <span class="text-xs text-gray-400 bg-gray-100 px-2 py-0.5 rounded-full">
                            {{ result.count }} item{% if result.count != 1 %}s{% endif %}
                        </span>
                    </div>
                    {% if result.items is empty %}
                        <p class="text-sm text-gray-400 italic">Empty collection (no results)</p>
                    {% else %}
                        <ol class="space-y-2">
                            {% for item in result.items %}
                            <li class="flex gap-2">
                                <span class="text-xs text-gray-400 mt-0.5 w-5 text-right shrink-0">{{ loop.index }}.</span>
                                <pre class="text-xs font-mono bg-gray-50 rounded p-2 flex-1 overflow-x-auto">{{ item }}</pre>
                            </li>
                            {% endfor %}
                        </ol>
                    {% endif %}
                </div>
            {% endif %}
        {% endif %}

    </turbo-frame>

    {# ---- Reference sidebar (outside frame — never re-renders on submit) ---- #}
    <div class="space-y-4">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Example expressions</h3>
            <ul class="text-xs text-gray-500 space-y-2 font-mono">
                <li><code class="bg-gray-50 px-1 rounded">5 + 3</code> — arithmetic (no context needed)</li>
                <li><code class="bg-gray-50 px-1 rounded">true and false</code> — boolean logic</li>
                <li><code class="bg-gray-50 px-1 rounded">Patient.name.given</code> — navigate Patient</li>
                <li><code class="bg-gray-50 px-1 rounded">Patient.name.where(use = 'official')</code> — filter</li>
                <li><code class="bg-gray-50 px-1 rounded">Patient.name.family.exists()</code> — existence check</li>
                <li><code class="bg-gray-50 px-1 rounded">Patient.birthDate</code> — scalar field</li>
                <li><code class="bg-gray-50 px-1 rounded">Observation.value.ofType(Quantity)</code> — type filter</li>
            </ul>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Sample Patient JSON</h3>
            <pre class="text-xs font-mono bg-gray-50 rounded p-3 overflow-x-auto">{
  "resourceType": "Patient",
  "id": "example",
  "name": [
    {
      "use": "official",
      "family": "Chalmers",
      "given": ["Peter", "James"]
    },
    {
      "use": "usual",
      "given": ["Jim"]
    }
  ],
  "gender": "male",
  "birthDate": "1974-12-25",
  "active": true
}</pre>
        </div>
    </div>

</div>
{% endblock %}
