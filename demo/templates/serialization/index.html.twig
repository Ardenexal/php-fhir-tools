{% extends 'base.html.twig' %}

{% block title %}Serialization Playground{% endblock %}

{% block body %}
<div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Serialization Playground</h1>
    <p class="mt-1 text-gray-500 text-sm">Validate, convert, or inspect FHIR resources. Paste JSON or XML — the format is detected automatically.</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    {# Turbo Frame wraps form + result. On POST, Turbo swaps just this column. #}
    <turbo-frame id="serialization-playground" class="lg:col-span-2 space-y-4">

        <form action="{{ path('app_serialization_process') }}" method="POST"
              class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label for="resource_type" class="block text-sm font-medium text-gray-700 mb-1">Resource type</label>
                    <select id="resource_type"
                            name="resource_type"
                            class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        {% for type in resource_types %}
                        <option value="{{ type }}" {% if type == resource_type %}selected{% endif %}>{{ type }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="action" class="block text-sm font-medium text-gray-700 mb-1">Action</label>
                    <select id="action"
                            name="action"
                            class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <option value="validate"      {% if action == 'validate'      %}selected{% endif %}>Validate</option>
                        <option value="json_to_xml"   {% if action == 'json_to_xml'   %}selected{% endif %}>JSON → XML</option>
                        <option value="xml_to_json"   {% if action == 'xml_to_json'   %}selected{% endif %}>XML → JSON</option>
                        <option value="show_metadata" {% if action == 'show_metadata' %}selected{% endif %}>Show metadata</option>
                    </select>
                </div>
            </div>

            <div>
                <label for="input" class="block text-sm font-medium text-gray-700 mb-1">
                    FHIR Resource <span class="text-red-500">*</span>
                    <span class="text-gray-400 font-normal">(JSON or XML, auto-detected)</span>
                </label>
                <textarea id="input"
                          name="input"
                          rows="16"
                          placeholder='{&#10;  "resourceType": "Patient",&#10;  "id": "example",&#10;  ...&#10;}'
                          class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm font-mono focus:outline-none focus:ring-2 focus:ring-indigo-500">{{ input }}</textarea>
            </div>

            <button type="submit"
                    class="bg-indigo-600 text-white px-6 py-2 rounded-lg text-sm font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Run
            </button>
        </form>

        {# ---- Result ---- #}
        {% if error is not null %}
        <div class="bg-red-50 border border-red-200 rounded-xl p-4">
            <h3 class="text-sm font-semibold text-red-700 mb-1">Error</h3>
            <p class="text-sm text-red-600 font-mono">{{ error }}</p>
        </div>
        {% elseif result is not null %}

            {% if result.type == 'validate' %}
                {% if result.valid %}
                <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                    <p class="text-sm font-semibold text-green-700">✓ Resource is valid.</p>
                </div>
                {% else %}
                <div class="bg-red-50 border border-red-200 rounded-xl p-4">
                    <h3 class="text-sm font-semibold text-red-700 mb-2">✗ Validation failed ({{ result.errors|length }} error{% if result.errors|length != 1 %}s{% endif %})</h3>
                    <ul class="text-sm text-red-600 space-y-1 list-disc list-inside">
                        {% for err in result.errors %}
                        <li>{{ err }}</li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}

            {% elseif result.type == 'convert' %}
            <div class="bg-white border border-gray-200 rounded-xl p-4">
                <div class="flex items-center justify-between mb-3">
                    <h3 class="text-sm font-semibold text-gray-700">
                        Output ({{ result.format|upper }})
                    </h3>
                    <span class="text-xs text-gray-400 bg-gray-100 px-2 py-0.5 rounded-full">{{ result.output|length }} chars</span>
                </div>
                <pre class="text-xs font-mono bg-gray-50 rounded p-3 overflow-x-auto max-h-96">{{ result.output }}</pre>
            </div>

            {% elseif result.type == 'metadata' %}
            <div class="bg-white border border-gray-200 rounded-xl p-4">
                <h3 class="text-sm font-semibold text-gray-700 mb-3">Resource Metadata</h3>
                <table class="text-sm w-full">
                    <tbody class="divide-y divide-gray-100">
                        {% set rows = {
                            'PHP class':      result.class,
                            'resourceType':   result.resource_type ?? '—',
                            'FHIR type':      result.fhir_type ?? '—',
                            'FHIR version':   result.fhir_version ?? '—',
                            'Is resource':    result.is_resource ? 'true' : 'false',
                            'Is complex type': result.is_complex_type ? 'true' : 'false',
                            'Parent resource': result.parent_resource ?? '—',
                            'Element path':   result.element_path ?? '—'
                        } %}
                        {% for label, value in rows %}
                        <tr>
                            <td class="py-1.5 pr-4 text-gray-500 font-medium w-40">{{ label }}</td>
                            <td class="py-1.5 font-mono text-gray-800 break-all">{{ value }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% endif %}

        {% endif %}

    </turbo-frame>

    {# ---- Reference sidebar (outside frame — never re-renders on submit) ---- #}
    <div class="space-y-4">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Actions</h3>
            <ul class="text-xs text-gray-500 space-y-2">
                <li><strong class="text-gray-700">Validate</strong> — deserialize to PHP object, run structural validation, report errors</li>
                <li><strong class="text-gray-700">JSON → XML</strong> — deserialize JSON, re-serialize to FHIR XML</li>
                <li><strong class="text-gray-700">XML → JSON</strong> — deserialize XML, re-serialize to FHIR JSON</li>
                <li><strong class="text-gray-700">Show metadata</strong> — extract resourceType, FHIR version, and class info via reflection</li>
            </ul>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Sample Patient JSON</h3>
            <pre class="text-xs font-mono bg-gray-50 rounded p-3 overflow-x-auto">{
  "resourceType": "Patient",
  "id": "example",
  "text": {
    "status": "generated",
    "div": "&lt;div xmlns=\"http://www.w3.org/1999/xhtml\"&gt;John&lt;/div&gt;"
  },
  "name": [
    {
      "use": "official",
      "family": "Chalmers",
      "given": ["Peter", "James"]
    }
  ],
  "gender": "male",
  "birthDate": "1974-12-25",
  "active": true
}</pre>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Supported resource types</h3>
            <ul class="text-xs text-gray-500 space-y-0.5">
                {% for type in resource_types %}
                <li>• {{ type }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

</div>
{% endblock %}
