{
    "name": "ardenexal/fhir-tools",
    "description": "PHP CLI tool for generating FHIR types, resources, and profiles from FHIR StructureDefinitions",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-zip": "*",
        "amphp/http-client": "^5.3.4",
        "composer/semver": "^3.4.4",
        "nette/php-generator": "^4.2.0",
        "symfony/console": "^7.4.1",
        "symfony/dotenv": "^7.4",
        "symfony/filesystem": "^7.4",
        "symfony/flex": "^2.10",
        "symfony/framework-bundle": "^7.4.1",
        "symfony/http-client": "^7.4.1",
        "symfony/intl": "^7.4",
        "symfony/polyfill-php84": "^v1.33.0",
        "symfony/polyfill-php85": "^v1.33.0",
        "symfony/runtime": "^7.4.1",
        "symfony/serializer": "7.4.*",
        "symfony/validator": "^7.4.2",
        "symfony/yaml": "^7.4.1"
    },
    "require-dev": {
        "laravel/pint": "^1.26",
        "phpstan/phpstan": "^2.1.33",
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^12.5.3",
        "giorgiosironi/eris": "^1.0",
        "symfony/browser-kit": "^7.4",
        "symfony/css-selector": "^7.4",
        "symfony/dom-crawler": "^7.4.1",
        "symfony/maker-bundle": "^1.65.1",
        "symfony/phpunit-bridge": "^7.4"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ardenexal\\FHIRTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ardenexal\\FHIRTools\\Tests\\": "tests/",
            "Ardenexal\\FHIRTools\\R4B\\": "output/Ardenexal/FhirTools/R4B/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "phpstan": "php ./vendor/bin/phpstan.phar analyse --configuration=phpstan.neon --memory-limit=-1 -v",
        "lint": "php ./vendor/bin/pint -v --parallel --max-processes=4",
        "test": "php ./vendor/phpunit/phpunit/phpunit",
        "test-coverage": "php ./vendor/phpunit/phpunit/phpunit --coverage-html coverage",
        "test-unit": "php ./vendor/phpunit/phpunit/phpunit --testsuite=unit",
        "test-integration": "php ./vendor/phpunit/phpunit/phpunit --testsuite=integration",
        "test-fhir": "php ./vendor/phpunit/phpunit/phpunit --testsuite=fhir",
        "generate-models": "php ./bin/console fhir:generate -vvv"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.4.*"
        }
    }
}
